<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dogedroid.com.watchdoge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DiscoveryActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".onboarding.OnBoarding_1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".onboarding.OnBoarding_2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".onboarding.OnBoarding_3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".onboarding.OnBoarding_4"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".onboarding.OnBoarding_5"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LiveFeedActivity"
            android:label="@string/title_activity_live_feed"
            android:parentActivityName=".DashboardActivity"
            />
        <activity
            android:name=".DogeLogActivity"
            android:label="@string/title_activity_dogelog"
            android:parentActivityName=".DashboardActivity" />

        <activity android:name=".DashboardActivity"></activity>
    </application>

</manifest>